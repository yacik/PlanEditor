<Window x:Class="PlanEditor.WinObstacle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     
      Height="154" Width="229" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Title="Препятствие">

    <Grid>
        <Label Content="Ширина" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Wide" TextChanged="Text_Changed"  HorizontalAlignment="Left" Height="23" Margin="75,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Длина" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Length" TextChanged="Text_Changed"  HorizontalAlignment="Left" Height="23" Margin="75,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnOK"  Content="OK"  IsDefault="True" Click="Click_OK" HorizontalAlignment="Left" Margin="40,85,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Отмена" IsCancel="True" HorizontalAlignment="Left" Margin="120,85,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
